//upper bound (idea of the code)
private static int UpperBound(int [][] matrix)
{
	int max_degree=0;
	for (int i=0; i<matrix.length; i++)
	{	
		int degree = 0;
		for (int j=0; j<matrix[i].length; j++)
		{
		degree=degree+matrix[i][j];
		}
	if (degree>max_degree)
	{
	max_degree=degree;
	}
	}
	return max_degree+1; // according to Brooks' theorem, the maximum chromatic number is the maximum degree (+1 in some cases) of vertices;
}
